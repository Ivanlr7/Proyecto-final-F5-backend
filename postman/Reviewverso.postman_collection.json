{
  "info": {
    "name": "Reviewverso API",
    "_postman_id": "reviewverso-api-collection",
    "description": "Colección con peticiones principales para Reviewverso backend",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080/api/v1" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Register",
      "item": [
        {
          "name": "Register (multipart)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "data", "type": "text", "value": "{\"userName\":\"juan\",\"email\":\"juan@example.com\",\"password\":\"secret\",\"roles\":[] }" },
                { "key": "profileImage", "type": "file", "src": "" }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/register",
              "host": ["{{baseUrl}}"],
              "path": ["register"]
            }
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [ { "key": "Content-Type", "value": "application/json" } ],
            "body": { "mode": "raw", "raw": "{ \"identifier\": \"juan@example.com\", \"password\": \"secret\" }" },
            "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth","login"] }
          }
        },
        {
          "name": "Get token (from current auth)",
          "request": {
            "method": "POST",
            "header": [],
            "url": { "raw": "{{baseUrl}}/auth/token", "host": ["{{baseUrl}}"], "path": ["auth","token"] }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/auth/logout", "host": ["{{baseUrl}}"], "path": ["auth","logout"] }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get all users",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/users", "host": ["{{baseUrl}}"], "path": ["users"] }
          }
        },
        {
          "name": "Get user by id",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/users/:id", "host": ["{{baseUrl}}"], "path": ["users",":id"] }
          }
        },
        {
          "name": "Get current user (me)",
          "request": {
            "method": "GET",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/users/me", "host": ["{{baseUrl}}"], "path": ["users","me"] }
          }
        },
        {
          "name": "Update user",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "data", "type": "text", "value": "{\"userName\":\"nuevo\",\"email\":\"nuevo@example.com\",\"roles\":[]}" },
                { "key": "profileImage", "type": "file", "src": "" }
              ]
            },
            "url": { "raw": "{{baseUrl}}/users/:id", "host": ["{{baseUrl}}"], "path": ["users",":id"] }
          }
        },
        {
          "name": "Editar imagen de usuario",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": "" }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/files/images/:fileName",
              "host": ["{{baseUrl}}"],
              "path": ["files", "images", ":fileName"]
            }
          }
        },
        {
          "name": "Delete user",
          "request": {
            "method": "DELETE",
            "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
            "url": { "raw": "{{baseUrl}}/users/:id", "host": ["{{baseUrl}}"], "path": ["users",":id"] }
          }
        }
      ]
    },
    {
      "name": "Files",
      "item": [
        {
          "name": "Get image",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/files/images/:fileName", "host": ["{{baseUrl}}"], "path": ["files","images",":fileName"] }
          }
        },
        {
          "name": "Check exists",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/files/exists/:fileName", "host": ["{{baseUrl}}"], "path": ["files","exists",":fileName"] }
          }
        }
      ]
    },
    {
      "name": "Reviews",
      "item": [
        {
          "name": "Crear reseña",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"contentType\": \"MOVIE\",\n  \"contentId\": \"550\",\n  \"apiSource\": \"TMDB\",\n  \"reviewTitle\": \"Una obra maestra\",\n  \"reviewText\": \"Fight Club es increíble...\",\n  \"rating\": 5.0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["reviews"]
            }
          }
        },
        {
          "name": "Obtener todas las reseñas",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/reviews",
              "host": ["{{baseUrl}}"],
              "path": ["reviews"]
            }
          }
        },
        {
          "name": "Obtener reseña por ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/reviews/:id",
              "host": ["{{baseUrl}}"],
              "path": ["reviews",":id"]
            }
          }
        },
        {
          "name": "Obtener reseñas por usuario",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/reviews/user/:userId",
              "host": ["{{baseUrl}}"],
              "path": ["reviews","user",":userId"]
            }
          }
        },
        {
          "name": "Obtener reseñas por contenido",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/reviews/content?contentType=MOVIE&contentId=550",
              "host": ["{{baseUrl}}"],
              "path": ["reviews","content"],
              "query": [
                { "key": "contentType", "value": "MOVIE" },
                { "key": "contentId", "value": "550" }
              ]
            }
          }
        },
        {
          "name": "Obtener estadísticas de contenido",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/reviews/content/stats?contentType=MOVIE&contentId=550",
              "host": ["{{baseUrl}}"],
              "path": ["reviews","content","stats"],
              "query": [
                { "key": "contentType", "value": "MOVIE" },
                { "key": "contentId", "value": "550" }
              ]
            }
          }
        },
        {
          "name": "Actualizar reseña",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reviewTitle\": \"Una obra maestra actualizada\",\n  \"reviewText\": \"Fight Club es una película brillante...\",\n  \"rating\": 4.8\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/reviews/:id",
              "host": ["{{baseUrl}}"],
              "path": ["reviews",":id"]
            }
          }
        },
        {
          "name": "Eliminar reseña",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/reviews/:id",
              "host": ["{{baseUrl}}"],
              "path": ["reviews",":id"]
            }
          }
        },
        {
          "name": "Dar like a reseña",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/reviews/:id/like",
              "host": ["{{baseUrl}}"],
              "path": ["reviews", ":id", "like"]
            }
          }
        },
        {
          "name": "Quitar like a reseña",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/reviews/:id/like",
              "host": ["{{baseUrl}}"],
              "path": ["reviews", ":id", "like"]
            }
          }
        }
      ]
    },
    {
      "name": "Lists",
      "item": [
        {
          "name": "Crear lista",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Mis películas favoritas de 2024\",\n  \"description\": \"Una colección de las mejores películas que he visto este año\",\n  \"items\": [\n    {\n      \"contentType\": \"MOVIE\",\n      \"contentId\": \"550\",\n      \"apiSource\": \"TMDB\"\n    },\n    {\n      \"contentType\": \"MOVIE\",\n      \"contentId\": \"680\",\n      \"apiSource\": \"TMDB\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/lists",
              "host": ["{{baseUrl}}"],
              "path": ["lists"]
            }
          }
        },
        {
          "name": "Obtener todas las listas",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/lists",
              "host": ["{{baseUrl}}"],
              "path": ["lists"]
            }
          }
        },
        {
          "name": "Obtener lista por ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/lists/:id",
              "host": ["{{baseUrl}}"],
              "path": ["lists",":id"]
            }
          }
        },
        {
          "name": "Obtener listas por usuario",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/lists/user/:userId",
              "host": ["{{baseUrl}}"],
              "path": ["lists","user",":userId"]
            }
          }
        },
        {
          "name": "Actualizar lista",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Mis películas favoritas actualizadas\",\n  \"description\": \"Lista actualizada\",\n  \"items\": [\n    {\n      \"contentType\": \"MOVIE\",\n      \"contentId\": \"550\",\n      \"apiSource\": \"TMDB\"\n    },\n    {\n      \"contentType\": \"SERIES\",\n      \"contentId\": \"1234\",\n      \"apiSource\": \"TMDB\"\n    },\n    {\n      \"contentType\": \"VIDEOGAME\",\n      \"contentId\": \"5678\",\n      \"apiSource\": \"RAWG\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/lists/:id",
              "host": ["{{baseUrl}}"],
              "path": ["lists",":id"]
            }
          }
        },
        {
          "name": "Eliminar lista",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/lists/:id",
              "host": ["{{baseUrl}}"],
              "path": ["lists",":id"]
            }
          }
        }
      ]
    }
  ]
}
